pipeline {
   agent any
   environment {
    image_name = ''
   }
   stages {
       stage('Build') {
           agent {
               docker {
                   image 'python:3.6.8'
                   args  '--net="host" --user="root"'
               }
           }
           steps {
              sh 'pip3 install -r app/requirements.txt --user'
           }
       }
       stage("test"){
           agent {
               docker {
                   image 'python:3.6.8'
                   args  '--net="host" --user="root"'
               }
           }
          steps{
              sh 'python app/tests/test.py'
          }
          post{
              success{
                  echo "======== test successfully========"
              }
              failure{
                  echo "======== test failed========"
              }
          }
      }
      stage('Publish') {
          steps{
              script {
                  image_name = "app" + ":$BUILD_NUMBER"
                  dockerImage = docker.build(image_name,"--network  host -f app/Dockerfile .")
              }
          }
      }

      stage ('Deploy') {
          steps {
              script{
              sh 'cat ${image_name}'
            
              }
          }
      }




   }
}
